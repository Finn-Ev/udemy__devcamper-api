{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/models/Review.js",
    "src/models/User.js",
    "src/models/Course.js",
    "src/models/Bootcamp.ts"
  ],
  "exclude": ["node_modules"]
}
